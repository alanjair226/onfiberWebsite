---
import Layout from '../layouts/Layout.astro';
import EmpresarialButton from '../components/buttons/EmpresarialButton.astro';
import TestimoniosButton from '../components/buttons/TestimoniosButton.astro';
import PaquetesButton from '../components/buttons/PaquetesButton.astro';
---

<Layout title="OnFiber" heroImage='/background1.png'>
    <main class="flex flex-col h-full  w-full ">

		<div class="flex flex-col md:flex-row text-center md:text-start justify-between md:px-9 lg:px-20 h-full items-center">
			<div>
				<h1 class="text-4xl md:text-4xl lg:text-5xl mb-2 tracking-widest font-medium">INTERNET DE ALTA VELOCIDAD</h1>
				<p class="text-lg tracking-widest">Internet ilimitado y ultrarr√°pido donde otros no llegan.</p>
			</div>
			<img src="/Logo.svg" alt="ONFIBER Logo" class="h-48 xl:h-56 hidden md:flex ">
		</div>

        <div class="flex-grow"></div>
		<div>
			<div class="flex flex-col gap-3 text-center mb-5 max-w-80 m-auto md:hidden">
				<a href="/contratar" class="px-5 py-2 bg-white bg-opacity-5 backdrop-blur-sm border-2 border-white-300 text-white-300 rounded-full transition-colors duration-300 hover:bg-white hover:text-black block text-base">CONTRATAR</a>
				<a href="/contactanos" class="px-5 py-2 bg-white bg-opacity-5 backdrop-blur-sm rounded-full border-2 border-white transition-colors duration-300 hover:bg-gray-400 hover:text-white  flex flex-row justify-center text-base items-center "> <img src="/headset-icon-white.svg" alt="Contactanos" class="h-6 p-1 "> CONTACTANOS</a>
			</div>
			<div class="flex flex-row justify-center w-full md:w-2/3 lg:w-1/2 m-auto">
				<EmpresarialButton/>
				<PaquetesButton/>
				<TestimoniosButton/>
			</div>
		</div>
        
    </main>
</Layout>

<style>
	main {
		margin: 0;
		padding: 1rem;  
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
