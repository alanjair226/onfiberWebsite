---
import Layout from '../layouts/Layout.astro';

import EmpresarialButton from '../components/buttons/EmpresarialButton.astro';
import PaymentsButton from '../components/buttons/PaymentsButton.astro';
import HomeButton from '../components/buttons/HomeButton.astro';
import CardPaquetes from '../components/CardPaquetes.astro';
---

<Layout title="OnFiber Empresarial" heroImage='/background-paquetes.png'>
    <main class="flex flex-col h-full  w-full ">
        <h1 class="text-4xl  mb-3 tracking-wides text-center">CONTACTO</h1>
		
		<div class="flex flex-col w-full justify-center md:hidden">
			<h2 class="text-center italic">ATENCIÓN A CLIENTES</h2>
			<p class="text-center text-sm">No dudes en comunicarte por cualquier duda que tengas.</p>
			<div class="flex flex-row justify-center items-center">
				<img class="h-12" src="/phone.svg" alt="telefono OnFiber">
				<p class="color-principal">449 388 09 98</p>
			</div>
			<div class="flex flex-row justify-center items-center">
				<img class="h-12" src="/whatsapp.svg" alt="whatsapp OnFiber">
				<p class="color-principal">449 327 51 35</p>
			</div>
		</div>

		<div class="flex flex-row h-full">
			<div class="md:flex flex-col w-full justify-center hidden">
				<h2 class="text-center font-bold italic">ATENCIÓN A CLIENTES</h2>
				<p class="text-center">No dudes en comunicarte por cualquier duda que tengas.</p>
				<div class="flex flex-row justify-center items-center">
					<img class="h-12" src="/phone.svg" alt="telefono OnFiber">
					<p class="color-principal">449 388 09 98</p>
				</div>
				<div class="flex flex-row justify-center items-center">
					<img class="h-12" src="/whatsapp.svg" alt="whatsapp OnFiber">
					<p class="color-principal">449 327 51 35</p>
				</div>
			</div>
			<div class="md:flex flex-col w-full justify-center hidden">
				<h2 class="text-center font-bold italic">REDES SOCIALES</h2>
				<div class="flex flex-row justify-center items-center">
					<a href=""><img class="h-20" src="/facebook.svg" alt="facebook OnFiber"></a>
					<a href=""><img class="h-20" src="/instagram.svg" alt="instagram OnFiber"></a>
				</div>
			</div>
		</div>
		
        <div class="flex flex-grow">
            
        </div>
		<div class="flex flex-col w-full justify-center md:hidden mb-5">
			<h2 class="text-center italic">REDES SOCIALES</h2>
			<div class="flex flex-row justify-center items-center">
				<a href=""><img class="h-20" src="/facebook.svg" alt="facebook OnFiber"></a>
				<a href=""><img class="h-20" src="/instagram.svg" alt="instagram OnFiber"></a>
			</div>
		</div>
		<div>
			<div class="flex flex-row justify-center w-full md:w-2/3 lg:w-1/2 m-auto">
				<EmpresarialButton/>
				<HomeButton/>
				<PaymentsButton/>
			</div>
		</div>
        
    </main>
</Layout>

<style>

	main {
		margin: 0;
		padding: 1rem; 
        padding-top: 0; 
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
    .color-principal{
		color: #D3A7E4;
	}
</style>
