---
import Navbar from '../components/Navbar.astro';
interface Props {
    title: string;
    heroImage?: string;
}
const { title, heroImage } = Astro.props;
import '@fontsource/titillium-web';
import '@fontsource/chakra-petch';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="Astro description">
        <meta name="viewport" content="width=device-width">
        <link rel="icon" type="image/svg+xml" href="/Logo.svg">
        <meta name="generator" content={Astro.generator}>
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body class="bg-black text-white">
        <Navbar back/>
        <section class="relative h-svh bg-cover bg-center" style={`background-image: url(${heroImage});`}>
            <div class="absolute inset-0 bg-black bg-opacity-30"></div>

            <div class="relative z-10 flex flex-col items-center justify-center h-full text-center px-0">
                <slot name="hero" />
                <img src="/buttom-arrow.svg" alt="Contactanos" class="absolute bottom-16">
            </div>
        </section>
        <main class="bg-black text-white p-8">
            <slot name="content" />
        </main>
        <Footer />
    </body>
</html>

<style>
    html {
        background-color: white;
        font-family: 'Chakra Petch', sans-serif;
    }
</style>

<script id="growth_tool" src="https://cdn.chatapi.net/widget/widget.js?wId=2cc542ae-8eb9-49f7-9423-6d1e975acdcf"></script>