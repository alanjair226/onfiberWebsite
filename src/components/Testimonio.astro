---
interface Props {
    testimonial: string;
    name: string;
    subText?: string;
    imageSrc: string;
}
const { testimonial, name, subText, imageSrc } = Astro.props;
---

<div class="flex flex-col justify-center items-center p-2">
    <!-- Testimonial Box -->
    <div class="bg-color-principal  backdrop-blur-sm  relative flex flex-row gap-4 items-center text-white rounded-lg p-2 py-4 md:py-10 max-w-xl w-full">
        <img class="w-10 h-10" src="/quotes.svg" alt="quotes">
        <p class="text-left text-lg text-black font-semibold">
            {testimonial}
        </p>
    </div>
    <!-- Author Box -->
    <div class="relative flex flex-col items-center mt-8">
        <div class="relative">
            <img class="w-16 h-16 md:h-28 md:w-28 rounded-full border-4 border-color-principal object-cover" src={imageSrc} alt={name}>
        </div>
        <div class="mt-4 text-center">
            <p class="text-lg font-semibold">{name}</p>
            <p class="text-sm text-gray-400 ">{subText}</p>
        </div>
    </div>
</div>

<style>
    .bg-color-principal {
        background-color: #d3a7e4;
    }
    .border-color-principal {
        border: solid 4px #D3A7E4;
    }
</style>
